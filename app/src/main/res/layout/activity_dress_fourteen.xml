<?xml version="1.0" encoding="utf-8"?>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

    <TableRow
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E8DEE1">


        <ImageButton
            android:id="@+id/btn_backwardtoall"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="#E8DEE1"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/txt_tooldresses"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="DRESSES"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/btn_addcart"
            android:layout_width="59dp"
            android:layout_height="55dp"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:background="#E8DEE1"
            app:srcCompat="@drawable/cart"
            tools:ignore="VectorDrawableCompat,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="58dp"
            android:layout_height="56dp"
            android:background="#E8DEE1"
            app:srcCompat="@drawable/profile"
            tools:ignore="VectorDrawableCompat,SpeakableTextPresentCheck" />

    </TableRow>



<ScrollView
    android:layout_width="409dp"
    android:layout_height="wrap_content"
    tools:ignore="SpeakableTextPresentCheck"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".dress_fourteen">


        <TextView
            android:id="@+id/txt_dress14name"
            android:layout_width="329dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:text="Halter Neck Mini Dress By Coco"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/img_dress14"
            app:layout_constraintStart_toStartOf="@+id/img_dress14"
            app:layout_constraintTop_toBottomOf="@+id/img_dress14"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt_dress14price"
            android:layout_width="329dp"
            android:layout_height="20dp"
            android:text="LKR 1495/="
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_dress14name"
            app:layout_constraintStart_toStartOf="@+id/txt_dress14name"
            app:layout_constraintTop_toBottomOf="@+id/txt_dress14name"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt_dress14size"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:text="SIZE : "
            app:layout_constraintEnd_toEndOf="@+id/txt_dress14price"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txt_dress14price"
            app:layout_constraintTop_toBottomOf="@+id/txt_dress14price"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt_dresscolor"
            android:layout_width="71dp"
            android:layout_height="23dp"
            android:layout_marginTop="40dp"
            android:text="@string/txt_dress13color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/txt_dress14size"
            app:layout_constraintTop_toBottomOf="@+id/txt_dress14size" />

        <ImageView
            android:id="@+id/img_dress14"
            android:layout_width="353dp"
            android:layout_height="515dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dress14" />

        <ImageButton
            android:id="@+id/btn_drsaddwlbtn3"
            android:layout_width="54dp"
            android:layout_height="57dp"
            android:background="#EFE6E8"
            app:layout_constraintBottom_toTopOf="@+id/txt_dress14name"
            app:layout_constraintEnd_toEndOf="@+id/img_dress14"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="@+id/img_dress14"
            app:layout_constraintTop_toTopOf="@+id/img_dress14"
            app:layout_constraintVertical_bias="0.017"
            app:srcCompat="@drawable/addwishlist"
            tools:ignore="SpeakableTextPresentCheck,VectorDrawableCompat" />

        <TextView
            android:id="@+id/txt_dress14quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="168dp"
            android:text="QUANTITY: "
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/txt_dresscolor"
            app:layout_constraintTop_toBottomOf="@+id/txt_dresscolor"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_qntdecrement"
            android:layout_width="67dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"

            android:layout_marginBottom="12dp"
            android:background="@drawable/ushani_dress_btnqnt"
            android:onClick="decrement"
            android:text="-"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#E6CECE"
            app:layout_constraintBottom_toTopOf="@+id/btn_addtocart"
            app:layout_constraintStart_toEndOf="@+id/txt_dress14quantity"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_qntdecrement2"
            android:layout_width="69dp"
            android:layout_height="42dp"
            android:background="@drawable/ushani_dress_btnqnt"
            android:gravity="center_horizontal"
            android:onClick="increment"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#E6CECE"
            app:layout_constraintBottom_toTopOf="@+id/btn_addtocart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.239"
            app:layout_constraintStart_toEndOf="@+id/qntvalue"
            app:layout_constraintTop_toBottomOf="@+id/txt_dress14name"
            app:layout_constraintVertical_bias="0.962"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/qntvalue"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="152dp"
            android:gravity="center_horizontal"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn_addtocart"
            app:layout_constraintStart_toEndOf="@+id/btn_qntdecrement"
            app:layout_constraintTop_toBottomOf="@+id/txt_dress14name"
            app:layout_constraintVertical_bias="0.906" />

        <Button
            android:id="@+id/btn_addtocart"
            android:layout_width="266dp"
            android:layout_height="48dp"
            android:layout_marginTop="365dp"
            android:background="@drawable/ushani_dress_btnqnt"
            android:drawableEnd="@drawable/cart"
            android:drawableRight="@drawable/cart"
            android:text="ADD TO CART"
            android:textColor="#000000"
            app:backgroundTint="#BCB4B7"
            app:layout_constraintEnd_toEndOf="@+id/img_dress14"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/img_dress14"
            app:layout_constraintTop_toTopOf="@+id/txt_dress14name"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spinnerdresssize"
            android:layout_width="108dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/txt_dress14size"
            app:layout_constraintTop_toBottomOf="@+id/txt_dress14price"
            tools:ignore="SpeakableTextPresentCheck" />

        <RadioGroup
            android:id="@+id/rdcolorgroup"
            android:layout_width="197dp"
            android:layout_height="173dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toEndOf="@+id/txt_dresscolor"
            app:layout_constraintTop_toBottomOf="@+id/spinnerdresssize">

            <RadioButton
                android:id="@+id/rbcolorred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RED" />

            <RadioButton
                android:id="@+id/rbcolorpink"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="PINK" />

            <RadioButton
                android:id="@+id/rbcolorblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BLUE" />

            <RadioButton
                android:id="@+id/rbcolorblack"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="BLACK" />
        </RadioGroup>

        <TextView
            android:id="@+id/txt_dresscode14"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_marginTop="4dp"
            android:text="SD482"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spinnerdresssize"
            app:layout_constraintTop_toBottomOf="@+id/txt_dress14price" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</LinearLayout>