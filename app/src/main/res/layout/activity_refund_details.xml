<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Refund_Details">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bgfeed__2_" />

    <TextView
        android:id="@+id/backgroundRefundD"
        android:layout_width="368dp"
        android:layout_height="540dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/boxrefundadd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtproefAmount"
        android:layout_width="164dp"
        android:layout_height="34dp"
        android:layout_marginTop="80dp"
        android:text="@string/txtproefAmount"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtpronameV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtpronameV"
        app:layout_constraintTop_toBottomOf="@+id/txtpronameV" />

    <TextView
        android:id="@+id/txtPurchDateV"
        android:layout_width="188dp"
        android:layout_height="37dp"
        android:layout_marginTop="144dp"
        android:text="@string/txtPurchDateV"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPurchaseTypeV"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:text="@string/txtPurchaseTypeV"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtPurchDateV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtPurchDateV"
        app:layout_constraintTop_toBottomOf="@+id/txtPurchDateV" />

    <TextView
        android:id="@+id/txtpronameV"
        android:layout_width="164dp"
        android:layout_height="34dp"
        android:layout_marginTop="64dp"
        android:text="@string/txtpronameV"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtPurchaseTypeV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtPurchaseTypeV"
        app:layout_constraintTop_toBottomOf="@+id/txtPurchaseTypeV" />

    <TextView
        android:id="@+id/textViewRefundDetails"
        android:layout_width="260dp"
        android:layout_height="37dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="@string/textViewRefundDetails"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/TextPurchDateV"
        android:layout_width="241dp"
        android:layout_height="40dp"
        android:layout_marginTop="188dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPurchDateV"
        android:layout_width="241dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/TextPurchDateV"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/TextPurchDateV"
        app:layout_constraintTop_toBottomOf="@+id/TextPurchDateV" />

    <TextView
        android:id="@+id/textPurchDateV2"
        android:layout_width="241dp"
        android:layout_height="40dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="@+id/textPurchDateV3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textPurchDateV3"
        app:layout_constraintTop_toBottomOf="@+id/textPurchDateV3" />

    <TextView
        android:id="@+id/textPurchDateV3"
        android:layout_width="241dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/textPurchDateV"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textPurchDateV"
        app:layout_constraintTop_toBottomOf="@+id/textPurchDateV" />

</androidx.constraintlayout.widget.ConstraintLayout>